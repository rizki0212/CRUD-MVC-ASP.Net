@model IEnumerable<Indomaret.Models.Indomaretku>
@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Message</h2>
<a href="/Indomaret/Tambah" class="btn btn-primary mb-3">Tambah Data</a>
<table class="table table-striped table table-bordered">
    <thead>
        <tr>
            <th>Kode Barang</th>
            <th>Nama Barang</th>
            <th>Harga</th>
            <th>Nama Suplier</th>
            <th>Detail</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
         <tr>
            <td>@item.kode_barang</td>
             <td>@item.nama</td>
             @{
            var harga = item.harga * 2;
            <td>@harga</td>
              }
             <td>@item.suplier</td>
             <td><a href="/Indomaret/Detail/@item.kode_barang" class="btn btn-primary"><i class="fa fa-info-circle"></i>Detail</a></td>
             <td><a href="/Indomaret/Edit/@item.kode_barang" class="btn btn-success">Edit</a></td>
             <td><a href="/Indomaret/Delete/@item.kode_barang" class="btn btn-danger">Delete</a></td>
        </tr>

        }
        
    </tbody>
</table>

